{
  "openapi": "3.0.0",
  "info": {
    "title": "To do list",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register user",
        "description": "Used to register a new user",
        "tags": ["register"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/register"
              },
              "examples": {
                "register": {
                  "value": {
                    "name": "jose",
                    "email": "jose@email.com",
                    "password": "pass1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "User already registered"
          },
          "201": {
            "description": "User created"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login",
        "description": "Used to login user",
        "tags": ["login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "login": {
                  "value": {
                    "email": "jose@email.com",
                    "password": "pass1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "User already registered"
          },
          "201": {
            "description": "Authentication succeeded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/task": {
      "post": {
        "summary": "Create a task",
        "description": "Used to create a task",
        "tags": ["task"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/task"
              },
              "examples": {
                "task": {
                  "value": {
                    "description": "fazer janta",
                    "priority": "alta"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Authentication failed"
          },
          "201": {
            "description": "Task created"
          }
        }
      },
      "get": {
        "description": "Retrieve tasks",
        "summary": "Retrieve all tasks from user",
        "tags": ["task"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Authentication failed"
          },
          "201": {
            "description": "Task created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tasks": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/task"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/task/{id}": {
      "delete": {
        "summary": "Delete a task",
        "description": "Used to delete a task",
        "tags": ["task"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of the task",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "description": "Authentication failed"
          },
          "404": {
            "description": "Task not found"
          },
          "200": {
            "description": "Task deleted"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          }
        }
      },
      "register": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
